@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="tableformat1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPriorityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketStatusId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedToUserId)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.TicketType.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.TicketPriority.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.TicketStatus.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.OwnerUser.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.AssignedToUser.DisplayName)
                </td>



                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("View all tickets", "Index")
<br />



@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tableformat1').DataTable();
        });
    </script>
}
